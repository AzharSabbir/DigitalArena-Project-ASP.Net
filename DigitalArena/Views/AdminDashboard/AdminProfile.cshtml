@model DigitalArena.DBContext.User

@{
    ViewBag.Title = "Admin Profile";

    var profileImg = !string.IsNullOrWhiteSpace(Model.ProfileImage)
        ? Url.Content($"~/Assets/user_profile_image/user_{Model.UserId}/{Model.ProfileImage}")
        : Url.Content("~/Assets/user_profile_image/avatar.jpg");
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow rounded-4 p-4">
                <div class="text-center mb-4">
                    <img src="@profileImg" alt="Admin Profile"
                         class="rounded-circle border border-3"
                         style="width: 120px; height: 120px; object-fit: cover;" />
                </div>

                <div class="text-center mb-3">
                    <h4 class="fw-bold text-primary">@Model.FullName</h4>
                    <span class="badge bg-secondary text-uppercase">@Model.Role</span>
                </div>

                <div class="row mb-2">
                    <div class="col-5 text-muted">Username:</div>
                    <div class="col-7 fw-medium">@Model.Username</div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 text-muted">Email:</div>
                    <div class="col-7 fw-medium">@Model.Email</div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 text-muted">Phone:</div>
                    <div class="col-7 fw-medium">@Model.Phone</div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 text-muted">Active Status:</div>
                    <div class="col-7 fw-medium">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 text-muted">Joined On:</div>
                    <div class="col-7 fw-medium">@Model.CreatedAt.ToString("dd MMM yyyy")</div>
                </div>
                @if (Model.LastLoginAt.HasValue)
                {
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Last Login:</div>
                        <div class="col-7 fw-medium">@Model.LastLoginAt.Value.ToString("dd MMM yyyy hh:mm tt")</div>
                    </div>
                }

                <div class="mt-4 text-center">
                    <a href="@Url.Action("EditProfile", "AdminAccount")" class="btn btn-outline-primary me-2">
                        Edit Profile
                    </a>
                    <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-secondary">
                        Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
