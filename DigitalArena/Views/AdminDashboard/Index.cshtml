@{
    ViewBag.Title = "Admin Dashboard";

    // Dummy data directly in view
    var totalBuyers = 256;
    var ordersToday = 34;
    var revenue = 12540.75m;
    var newReviews = 12;

    var recentOrders = new List<dynamic>
{
        new { OrderId = 101, BuyerName = "John Doe", TotalAmount = 150.00m, Status = "Completed", OrderDate = DateTime.Today.AddDays(-1) },
        new { OrderId = 102, BuyerName = "Jane Smith", TotalAmount = 249.99m, Status = "Pending", OrderDate = DateTime.Today.AddDays(-2) },
        new { OrderId = 103, BuyerName = "Alice Johnson", TotalAmount = 89.50m, Status = "Completed", OrderDate = DateTime.Today.AddDays(-3) },
        new { OrderId = 104, BuyerName = "Bob Brown", TotalAmount = 300.00m, Status = "Pending", OrderDate = DateTime.Today.AddDays(-4) },
    };
}

<h1 class="mb-4 fw-bold text-primary">Dashboard</h1>

<div class="row g-4 mb-5">
    <!-- Cards for Key Metrics -->
    <div class="col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="bg-primary text-white rounded-circle p-3 me-3">
                    <i class="bi bi-people fs-3"></i>
                </div>
                <div>
                    <h5 class="mb-1">Total Buyers</h5>
                    <h3 class="fw-bold">@totalBuyers</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="bg-success text-white rounded-circle p-3 me-3">
                    <i class="bi bi-bag-check fs-3"></i>
                </div>
                <div>
                    <h5 class="mb-1">Orders Today</h5>
                    <h3 class="fw-bold">@ordersToday</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="bg-warning text-white rounded-circle p-3 me-3">
                    <i class="bi bi-currency-dollar fs-3"></i>
                </div>
                <div>
                    <h5 class="mb-1">Revenue</h5>
                    <h3 class="fw-bold">@String.Format("{0:C}", revenue)</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="bg-info text-white rounded-circle p-3 me-3">
                    <i class="bi bi-chat-left-text fs-3"></i>
                </div>
                <div>
                    <h5 class="mb-1">New Reviews</h5>
                    <h3 class="fw-bold">@newReviews</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Action Buttons -->
<div class="mb-5">
    <h4 class="mb-3">Quick Actions</h4>
    <div class="d-flex flex-wrap gap-3">
        <a href="#" class="btn btn-primary btn-lg">
            <i class="bi bi-people me-2"></i> Manage Buyers
        </a>
        <a href="#" class="btn btn-warning btn-lg text-white">
            <i class="bi bi-box-seam me-2"></i> Manage Products
        </a>
        <a href="#" class="btn btn-info btn-lg text-white">
            <i class="bi bi-chat-left-text me-2"></i> Manage Reviews
        </a>
    </div>
</div>

<!-- Recent Activity Table -->
<div>
    <h4 class="mb-3">Recent Orders</h4>
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-bordered align-middle mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th>Order ID</th>
                    <th>Buyer</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Order Date</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in recentOrders)
                {
                    <tr class="text-center">
                        <td>@order.OrderId</td>
                        <td>@order.BuyerName</td>
                        <td>@String.Format("{0:C}", order.TotalAmount)</td>
                        <td>
                            <span class="badge @(order.Status == "Completed" ? "bg-success" : "bg-warning")">
                                @order.Status
                            </span>
                        </td>
                        <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-primary">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
