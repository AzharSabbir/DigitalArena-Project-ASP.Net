@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Digital Arena - Landing</title>
    <link rel="stylesheet" href="~/Content/css/LandingPage.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lexend:wght@400;700&family=Poppins:wght@600&family=Inria+Sans:wght@700&display=swap" />
    <script src="~/Scripts/custom/LandingPage.js"></script>
</head>
<body>

    <section id="hero">
        <div class="hero-container">
            <header class="site-header">
                <a href="@Url.Action("LandingPage", "Home")" class="logo">
                    <img src="@Url.Content("~/Assets/site-images/site-logo.png")" alt="Digital Arena Logo">
                    <span class="logo-text">Digital Arena</span>
                </a>
                <nav class="main-nav">
                    <ul>
                        <li><a href="@Url.Action("UserProfile", "UserProfile")">SELL YOUR PRODUCT</a></li>
                        <li><a href="@Url.Action("Trending", "TrendingProducts")">TRENDING</a></li>
                        <li class="dropdown">
                            <a href="#">BROWSE CATEGORIES</a>
                            <div class="dropdown-menu">
                                <a href="@Url.Action("BrowseCategory", "BrowseProduct", new { name = "3D Model" })">3D Model</a>
                                <a href="@Url.Action("BrowseCategory", "BrowseProduct", new { name = "E-Book" })">E-Book</a>
                                <a href="@Url.Action("BrowseCategory", "BrowseProduct", new { name = "Presentation Slide" })">Presentation Slide</a>
                                <a href="@Url.Action("BrowseCategory", "BrowseProduct", new { name = "Graphics Template" })">Graphics Template</a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <div class="auth-buttons-container">
                    <div class="auth-buttons">
                        @{
                            var userId = Session["UserId"]?.ToString();
                        }
                        @if (User.Identity.IsAuthenticated && !string.IsNullOrEmpty(userId))
                        {
                            var profileImage = Session["ProfileImage"] as string;

                            string imagePath = Url.Content("~/Assets/user_profile_image/user_" + userId + "/" + profileImage);

                            if (string.IsNullOrEmpty(userId) || string.IsNullOrEmpty(profileImage))
                            {
                                imagePath = Url.Content("~/Assets/user_profile_image/avatar.jpg");
                            }

                            <div class="auth-user-logged-in">
                                <!-- Cart Icon -->
                                <a href="@Url.Action("Cart", "Cart")" title="Notifications" class="icon-btn">
                                    <img src="@Url.Content("~/Assets/images/cart.png")" alt="Notifications" class="icon-image" />
                                </a>

                                <!-- Notification Icon -->
                                @Html.Partial("_Notification")


                                <!-- Profile Image -->
                                <a href="@Url.Action("UserProfile", "UserProfile")" class="profile-link" title="View Profile">
                                    <img src="@imagePath" alt="Profile" class="profile-image-rounded" />
                                </a>
                            </div>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Auth")" class="btn btn-login">LOGIN</a>
                            <a href="@Url.Action("Register", "Auth")" class="btn btn-signup">SIGN UP</a>
                        }
                    </div>
                </div>
            </header>
            <main class="hero-content">
                <div class="hero-text">
                    <h1>@Model.Headline</h1>
                    <p class="subtitle">@Model.SubHeadline</p>
                    <a href="@Url.Action("ProductDetails", "ProductDetails", new { id = (int)Model.ProductId })" class="btn btn-purchase">PURCHASE NOW</a>
                </div>
                <div class="hero-image">
                    <img src="@Model.HeroImageUrl" alt="Hero Product" />
                </div>
            </main>
        </div>
    </section>

    <section id="features" class="features-bar">
        <div class="features-container">
            <a href="" class="feature-link">MOCKUP</a>
            <a href="" class="feature-link">TEMPLATES</a>
            <a href="" class="feature-link">LOWPOLY</a>
            <a href="" class="feature-link">GRAPHICS</a>
        </div>
    </section>
</body>
</html>
