@{
    ViewBag.Title = "Home";
}
<head>
    <link href="~/Content/styles.css" rel="stylesheet" type="text/css" />
</head>

<section style="display: flex; justify-content: center; gap: 20px; align-items: center; height: 80vh; flex-wrap: wrap;">
    @{
        var categories = new List<(string DisplayName, string RouteName)>
{
        ("Browse 3D Model", "3D Model"),
        ("Browse E-Book", "E-Book"),
        ("Browse Presentation Slide", "Presentation Slide"),
        ("Browse Graphics Template", "Graphics Template")
    };
    }

    @foreach (var cat in categories)
    {
        <a href="@Url.Action("BrowseCategory", "BrowseProduct", new { name = cat.RouteName })"
           class="btn btn-primary"
           style="padding: 12px 24px; font-size: 18px; background-color: #007bff; color: white; border: none; border-radius: 8px; text-decoration: none; min-width: 200px; text-align: center;">
            @cat.DisplayName
        </a>
    }
</section>

