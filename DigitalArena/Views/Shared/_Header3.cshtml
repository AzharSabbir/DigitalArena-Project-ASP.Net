<head>
    <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<style>
    .header {
        font-family: 'Inria Sans', sans-serif;
        justify-content: space-between;
        align-items: center;
        padding: 0 0px;
        height: 50px;
        width: 100%;
        box-sizing: border-box;
        background-color: white;
        position: relative;
    }

    .header-left,
    .header-center,
    .header-right {
        display: flex;
        align-items: center;
    }

    .header-left {
        gap: 16px;
    }

    .header-center {
        flex: 1;
        justify-content: center; /* ✅ Centers the search box */
    }
    .site-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 18px;
        text-decoration: none; /* Removes underline from <a> */
        color: inherit; /* Inherits text color */
    }

    .logo-text {
        font-family: 'Inria Sans', sans-serif;
        font-weight: 600;
        font-size: 32px;
        color: #384d6c;
        text-decoration: none; /* Ensures no underline */
    }
        .logo img {
            width: 72px;
            height: 72px;
        }

    /* Auth Buttons */

    .auth-buttons-container {
        width: 200px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .auth-buttons {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .auth-user-logged-in {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .btn {
        display: inline-block;
        text-align: center;
        border-radius: 20px;
        font-family: 'Inria Sans', sans-serif;
        font-weight: 700;
        font-size: 18px;
        padding: 9px 0;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-login {
        background-color: #f5f5f5;
        border: 1px solid #bebebe;
        color: #384d6c;
        width: 107px;
    }

        .btn-login:hover {
            background-color: #e0e0e0;
        }

    .btn-signup {
        background-color: #384d6c;
        border: 1px solid #8b8b8b;
        color: #ffffff;
        width: 107px;
    }

        .btn-signup:hover {
            background-color: #2c3e50;
        }

    /* Icon buttons (cart, bell) */

    .icon-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        border-radius: 4px;
        font-size: 25px;
        color: #8b8b8b;
        text-decoration: none;
        transition: background-color 0.2s;
    }

        .icon-btn:hover {
            color: #384d6c;
        }

    .icon-image {
        width: 30px;
        height: 30px;
        object-fit: contain;
    }
</style>

<header class="site-header">
    <a href="@Url.Action("LandingPage", "Home")" class="logo">
        <img src="@Url.Content("~/Assets/site-images/site-logo.png")" alt="Digital Arena Logo">
        <span class="logo-text">Digital Arena</span>
    </a>
    <div class="auth-buttons-container">
        <div class="auth-buttons">
            <div class="auth-user-logged-in">
                <!-- Cart Icon -->
                <a href="@Url.Action("Cart", "Cart")" title="Cart" class="icon-btn">
                    <img src="@Url.Content("~/Assets/images/cart.png")" alt="Cart" class="icon-image" />
                </a>

                <!-- Notification Bell -->
                @Html.Partial("_Notification")
            </div>
        </div>
    </div>
</header>

