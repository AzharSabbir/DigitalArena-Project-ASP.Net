<head>
    <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<style>
    .header {
        font-family: 'Inria Sans', sans-serif;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 40px;
        height: 85px;
        width: 100%;
        box-sizing: border-box;
        background-color: white;
        position: relative;
    }

    .header-left,
    .header-center,
    .header-right {
        display: flex;
        align-items: center;
    }

    .header-left {
        gap: 16px;
    }

    .header-center {
        flex: 1;
        justify-content: center; /* ✅ Centers the search box */
    }

    .search-container {
        display: flex;
        align-items: center;
        background-color: #f5f5f5;
        border-radius: 16px;
        padding: 6px 20px;
        width: 500px;
        height: 36px;
    }

    .search-icon {
        width: 16px;
        height: 16px;
        margin-right: 15px;
    }

    .search-input {
        border: none;
        background: transparent;
        font-size: 16px;
        color: #000;
        outline: none;
        width: 100%;
    }

    .cart-icon {
        width: 34px;
        height: 36px;
        margin-right: 20px;
        cursor: pointer;
    }

    .auth-buttons {
        display: flex;
        gap: 16px;
    }

    .login-btn,
    .signup-btn {
        padding: 7px 20px;
        border-radius: 16px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        white-space: nowrap;
    }

    .login-btn {
        background-color: #f5f5f5;
        border: 1px solid #bebebe;
        color: #384d6c;
    }

        .login-btn:hover {
            background-color: #e8e8e8;
        }

    .signup-btn {
        background-color: #384d6c;
        border: 1px solid #8b8b8b;
        color: #ffffff;
    }

        .signup-btn:hover {
            background-color: #2a3a52;
        }
</style>

<header class="header">
    <a href="@Url.Action("LandingPage", "Home")" class="header-left" style="text-decoration: none; color: inherit;">
        <img src="~/Assets/images/img_image_1.png" alt="Digital Arena Logo" class="logo" />
        <h3 class="brand-name">Digital Arena</h3>
    </a>


    <div class="header-right">
        <img src="~/Assets/images/img_shopping_cart.png" alt="Shopping Cart" class="cart-icon" onclick="toggleCart()" />
        <div class="auth-buttons">
            <button class="login-btn" onclick="showLogin()">LOGIN</button>
            <button class="signup-btn" onclick="showSignup()">SIGN UP</button>
        </div>
    </div>
</header>
