<head>
    <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<style>
    .header {
        font-family: 'Inria Sans', sans-serif;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 40px;
        height: 85px;
        width: 100%;
        box-sizing: border-box;
        background-color: white;
        position: relative;
    }

    .header-left,
    .header-center,
    .header-right {
        display: flex;
        align-items: center;
    }

    .header-left {
        gap: 16px;
    }

    .header-center {
        flex: 1;
        justify-content: center; /* ✅ Centers the search box */
    }

    .search-container {
        display: flex;
        align-items: center;
        background-color: #f5f5f5;
        border-radius: 16px;
        padding: 6px 20px;
        width: 500px;
        height: 36px;
    }

    .search-icon {
        width: 16px;
        height: 16px;
        margin-right: 15px;
    }

    .search-input {
        border: none;
        background: transparent;
        font-size: 16px;
        color: #000;
        outline: none;
        width: 100%;
    }

    .cart-icon {
        width: 34px;
        height: 36px;
        margin-right: 20px;
        cursor: pointer;
    }

    .auth-buttons {
        display: flex;
        gap: 16px;
    }

    .login-btn,
    .signup-btn {
        padding: 7px 20px;
        border-radius: 16px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        white-space: nowrap;
    }

    .login-btn {
        background-color: #f5f5f5;
        border: 1px solid #bebebe;
        color: #384d6c;
    }

        .login-btn:hover {
            background-color: #e8e8e8;
        }

    .signup-btn {
        background-color: #384d6c;
        border: 1px solid #8b8b8b;
        color: #ffffff;
    }

        .signup-btn:hover {
            background-color: #2a3a52;
        }

</style>

<header class="header">
    <div class="header-left">
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home" )">
            <img src="~/assets/site-images/site-logo.png" alt="Digital Arena Logo" width="30" height="30" class="me-2" />
            <span class="fs-4 fw-semibold">Digital Arena</span>
        </a>
    </div>

    <div class="header-center">
        <div class="search-container">
            <img src="~/Assets/images/img_search.png" alt="Search" class="search-icon" />
            <input type="text" class="search-input" placeholder="Search for products..." id="searchInput" />
        </div>
    </div>

    <div class="header-right">
        <div class="auth-buttons">
            @if (User.Identity.IsAuthenticated)
            {
            <!-- Cart Icon with badge -->
            <a href="@Url.Action("Index", "Cart" )" class="position-relative d-inline-block me-2">
                <img src="~/Assets/images/img_shopping_cart.png" alt="Cart" width="34" height="36" class="cart-icon" />
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    8
                    <span class="visually-hidden">cart items</span>
                </span>
            </a>

            <!-- Profile Image -->
            <a href="@Url.Action("Profile", "Account" )"
               class="rounded-circle d-inline-block"
               style="width: 40px; height: 40px; overflow: hidden;">
                <img src="~/Assets/user_profile_image/avatar.jpg"
                     alt="Profile"
                     style="width: 100%; height: 100%; object-fit: cover;" />
            </a>

            <!-- Logout Button -->
            <a href="@Url.Action("Logout", "Auth" )"
               class="btn btn-outline-danger btn-sm ms-2"
               title="Logout"
               onclick="return confirm('Are you sure you want to logout?');">
                <i class="bi bi-box-arrow-right"></i>
            </a>
            }
            else
            {
            <!-- Login and Signup Buttons (Styled to match existing design) -->
            <button class="login-btn" onclick="window.location.href='@Url.Action("Login", "Auth" )'">LOGIN</button>
            <button class="signup-btn" onclick="window.location.href='@Url.Action("Register", "Auth" )'">SIGN UP</button>
            }
        </div>
    </div>
</header>
