<nav class="navbar navbar-light px-4" style="background-color: #fefefe;">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        @* Logo and Brand Name *@
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
            <img src="~/assets/site-images/site-logo.png" alt="Digital Arena Logo" width="30" height="30" class="me-2" />
            <span class="fs-4 fw-semibold">Digital Arena</span>
        </a>

        @* Centered Navigation Links *@
        <ul class="navbar-nav flex-row gap-4">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link px-2" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Products", "AllProducts", "Product", null, new { @class = "nav-link px-2" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link px-2" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link px-2" })
            </li>
        </ul>

        @* Right Side Controls *@
    <div class="d-flex align-items-center gap-3">
        @* Search Bar *@
        <form class="d-flex">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search" />
        </form>


        @* Profile/Login-Signup Buttons *@
        @if (User.Identity.IsAuthenticated)
        {
            @* Cart Icon with Item Count *@
            <a href="@Url.Action("Index", "Cart")" class="position-relative d-inline-block">
                <img src="~/Assets/site-images/cart_icon.png" alt="Cart" width="24" height="24" />
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    8
                    <span class="visually-hidden">cart items</span>
                </span>
            </a>
            <a href="@Url.Action("Profile", "Account")" class="rounded-circle d-inline-block" style="width: 40px; height: 40px; overflow: hidden;">
                <img src="~/Assets/user_profile_image/avatar.jpg" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;" />
            </a>
            <a href="@Url.Action("Logout", "Auth")"
               class="btn btn-outline-danger btn-sm"
               title="Logout"
               onclick="return confirm('Are you sure you want to logout?');">
                <i class="bi bi-box-arrow-right"></i>
            </a>
        }
        else
        {
            <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-primary">Login</a>
            <a href="@Url.Action("Register", "Auth")" class="btn btn-primary ms-2">Sign Up</a>
        }
    </div>
    </div>
</nav>
