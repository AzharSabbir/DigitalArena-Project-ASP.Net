<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/styles.css" />
    <link href="~/Content/css/Modals.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<script src="~/Scripts/custom/modals.js"></script>

<body>
    @if (User.Identity.IsAuthenticated && User.IsInRole("ADMIN"))
    {
        <!-- Admin layout with flex-based sidebar and content -->
        <div class="d-flex" style="height: 100vh; overflow: hidden;">
            <!-- Sidebar -->
            @Html.Partial("_AdminSidebar")

            <!-- Main Content -->
            <div id="adminBodyWrapper" class="flex-grow-1 d-flex flex-column" style="transition: margin-left 0.3s ease;">
                <header class="bg-light border-bottom px-4 py-2"></header>

                <main class="flex-grow-1 overflow-auto p-4">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <!-- Layout for others -->
        <div class="container body-content">
            @RenderBody()
        </div>
    }


    @if (!(User.Identity.IsAuthenticated && (User.IsInRole("ADMIN") || User.IsInRole("SELLER"))))
    {
        //@Html.Partial("_Footer")
    }

    @*Modal*@
    <!-- Confirm Dialog Modal -->
    <div id="confirm-dialog" class="custom-modal hidden">
        <div class="custom-modal-content">
            <p id="confirm-message">Are you sure?</p>
            <div class="modal-buttons">
                <button id="confirm-yes" class="modal-btn yes-btn">Yes</button>
                <button id="confirm-no" class="modal-btn no-btn">No</button>
            </div>
        </div>
    </div>

    <!-- Info Dialog Modal -->
    <div id="info-dialog" class="custom-modal hidden">
        <div class="custom-modal-content">
            <p id="info-message">This is an informational message.</p>
            <div class="modal-buttons">
                <button id="info-ok" class="modal-btn yes-btn">OK</button>
            </div>
        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
