<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("SELLER"))
        {
            @Html.Partial("_SellerHeader")
        }
        else if (User.IsInRole("BUYER"))
        {
            @Html.Partial("_Header")
        }
    }
    else
    {
        <header>
            @Html.Partial("_Header")
        </header>
    }

    @if (User.Identity.IsAuthenticated)
    {
        <!-- Admin layout with flex-based sidebar and content -->
        <div class="d-flex" style="height: 100vh; overflow: hidden;">
            <!-- Sidebar -->
            @Html.Partial("_AdminSidebar")

            <!-- Main Content -->
            <div id="adminBodyWrapper" class="flex-grow-1 d-flex flex-column" style="transition: margin-left 0.3s ease;">
                <header class="bg-light border-bottom px-4 py-2"></header>

                <main class="flex-grow-1 overflow-auto p-4">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <!-- Layout for others -->
        <div class="container body-content">
            @RenderBody()
        </div>
    }


    @if (!(User.Identity.IsAuthenticated && (User.IsInRole("ADMIN") || User.IsInRole("SELLER"))))
    {
        //@Html.Partial("_Footer")
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>