<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/styles.css" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("SELLER"))
        {
            @Html.Partial("_SellerHeader")
        }
        else if (User.IsInRole("BUYER"))
        {
            //@Html.Partial("_Header")
        }
    }
    else
    {
        //@Html.Partial("_Header")
    }

    @if (User.Identity.IsAuthenticated && User.IsInRole("ADMIN"))
    {
        <!-- Admin layout with sidebar and header -->
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-md-3 col-lg-2 p-0">
                    @Html.Partial("_AdminSidebar")
                </div>

                <!-- Main content area: header + page body -->
                <div class="col-md-9 col-lg-10 p-0 d-flex flex-column" style="min-height: 100vh;">

                    <!-- Admin Header (fits full width here) -->
                    <header class="bg-light border-bottom px-4 py-2">
                        @*@Html.Partial("_AdminHeader")*@
                    </header>

                    <!-- Page content below header, with some padding -->
                    <main class="flex-grow-1 p-4">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Layout for others -->
        <div class="container body-content">
            @RenderBody()
        </div>
    }


    @if (!(User.Identity.IsAuthenticated && (User.IsInRole("ADMIN") || User.IsInRole("SELLER"))))
    {
        //@Html.Partial("_Footer")
    }

    @*Modal*@
    <!-- Confirm Dialog Modal -->
    <div id="confirm-dialog" class="custom-modal hidden">
        <div class="custom-modal-content">
            <p id="confirm-message">Are you sure?</p>
            <div class="modal-buttons">
                <button id="confirm-yes" class="modal-btn yes-btn">Yes</button>
                <button id="confirm-no" class="modal-btn no-btn">No</button>
            </div>
        </div>
    </div>

    <!-- Info Dialog Modal -->
    <div id="info-dialog" class="custom-modal hidden">
        <div class="custom-modal-content">
            <p id="info-message">This is an informational message.</p>
            <div class="modal-buttons">
                <button id="info-ok" class="modal-btn yes-btn">OK</button>
            </div>
        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
