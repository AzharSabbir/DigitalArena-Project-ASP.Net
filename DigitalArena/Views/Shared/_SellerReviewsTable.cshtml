@model List<DigitalArena.DBContext.Review>

@{
    Func<DateTime, string> formatDate = d => d.ToString("dd MMM yyyy hh:mm tt");
}

@if (!Model.Any())
{
    <div class="alert alert-info">No reviews found with current filters.</div>
}
else
{
    foreach (var review in Model)
    {
        var product = review.Product;
        var categoryName = product.Category.Name;

        var buyer = review.User;
        var buyerImg = !string.IsNullOrEmpty(buyer.ProfileImage)
            ? $"~/Assets/user_profile_image/user_{buyer.UserId}/{buyer.ProfileImage}"
            : "~/Assets/user_profile_image/avatar.jpg";

        var productImg = !string.IsNullOrEmpty(product.Thumbnail)
            ? $"~/Assets/{categoryName}/product_{product.ProductId}/thumbnails/{product.Thumbnail}"
            : "~/Assets/ebook/default-thumb.jpg";

        <div class="card shadow-sm mb-4">
            <div class="card-body d-flex justify-content-between align-items-stretch">
                <!-- Buyer Info and Review -->
                <div class="d-flex flex-grow-1 me-3">
                    <img src="@Url.Content(buyerImg)" class="rounded-circle me-3 border"
                         alt="Buyer" style="width: 60px; height: 60px; object-fit: cover;" />
                    <div>
                        <h5 class="mb-0">@buyer.FullName</h5>
                        <small class="text-muted">@buyer.Username</small>
                        <div class="mt-1">
                            <span class="badge bg-warning text-dark me-1">@review.Rating / 5</span>
                            <span class="badge @(review.Status == "Approved" ? "bg-success" : review.Status == "Pending" ? "bg-warning text-dark" : "bg-danger")">
                                @review.Status
                            </span>
                        </div>
                        <hr />
                        <p class="mb-1"><strong>Product ID:</strong> @product.ProductId</p>
                        <p class="mb-1"><strong>Product Name:</strong> @product.Name</p>
                        <p class="mb-1"><strong>Category:</strong> @categoryName</p>
                        <p class="mb-1 text-muted"><strong>Reviewed At:</strong> @formatDate(review.CreatedAt)</p>
                        <p class="mb-0"><strong>Comment:</strong> @review.Comment</p>
                    </div>
                </div>

                <!-- Product Image -->
                <div class="ms-3 d-flex align-items-center">
                    <img src="@Url.Content(productImg)" alt="Product Thumbnail"
                         class="rounded border"
                         style="width: 120px; height: auto; object-fit: cover;" />
                </div>
            </div>
        </div>
    }
}
