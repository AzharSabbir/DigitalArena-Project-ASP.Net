@model List<DigitalArena.DBContext.Transaction>

@{
    ViewBag.Title = "Transactions for " + ViewBag.UserName;
}

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-white px-3 py-2 rounded shadow-sm">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "AdminDashboard")" class="text-decoration-none text-dark">Admin</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.RouteUrl("ManageBuyersRoute")" class="text-decoration-none text-dark">Manage Buyers</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.RouteUrl("BuyerDetailsRoute", new { id = ViewBag.UserId })" class="text-decoration-none text-dark">@ViewBag.UserName</a>
        </li>
        <li class="breadcrumb-item active text-primary" aria-current="page">
            Transactions
        </li>
    </ol>
</nav>

<h2>Transactions for @ViewBag.UserName</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No transactions found for this user.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light text-center">
                <tr>
                    <th>Transaction ID</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Wallet ID</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                    foreach (var txn in Model)
                    {
                        <tr class="text-center">
                            <td>@txn.TransactionId</td>
                            <td>
                                @if (txn.Type?.ToLower() == "credit")
                                {
                                    <span class="badge bg-success">Credit</span>
                                }
                                else if (txn.Type?.ToLower() == "debit")
                                {
                                    <span class="badge bg-danger">Debit</span>
                                }
                                else
                                {
                                    @txn.Type
                                }
                            </td>
                            <td>@txn.Amount.ToString("C")</td>
                            <td>
                                @if (txn.Status?.ToLower() == "completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (txn.Status?.ToLower() == "pending")
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (txn.Status?.ToLower() == "failed")
                                {
                                    <span class="badge bg-danger">Failed</span>
                                }
                                else
                                {
                                    @txn.Status
                                }
                            </td>
                            <td>@txn.WalletId</td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
}

<a href="@Url.RouteUrl("BuyerDetailsRoute", new { id = ViewBag.UserId })" class="btn btn-secondary mt-3">Back to Buyer Details</a>
